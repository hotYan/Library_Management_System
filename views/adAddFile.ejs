<%- include adHeader %>
    <link rel="stylesheet" type="text/css" href="../stylesheets/adAddBook.css">
    <link rel="stylesheet" type="text/css" href="../stylesheets/adBook.css">

    <script type="text/javascript">
        $(document).ready(function () {
            var left_li = $(".left ul li:eq(0)");
            left_li.css("color", "#FFF");
            left_li.css("background-color", "#BBCAF1");
            $(".left ul").find('li:eq(0)').children(".trig").css('display', 'block');
            $(".table tbody tr:odd").css("backgroundColor", "#DFF0D8");
            $(".table tbody tr").eq(3).addClass('error')
            $(".table tbody tr").eq(4).addClass('error')
            $(".data_1 input").attr('disabled', 'true');//图书编码默认不可输入
            var m_li = $(".menu ul li");
            m_li.eq(1).addClass('addCss');
            m_li.eq(1).click(function () {
                $(".menu_left").css('display', 'none');
                $(".menu_right").css('display', 'block');
                m_li.eq(0).removeClass('addCss')
                m_li.eq(1).addClass('addCss')
            });
            m_li.eq(0).click(function () {
                // $(".menu_left").css('display', 'block');
                // $(".menu_right").css('display', 'none');
                // m_li.eq(1).removeClass('addCss')
                // m_li.eq(0).addClass('addCss')
                window.location.href = "/adAddBook";

            });

        });
    </script>
    <%- include adLeftBar %>
        <div class="ad_data">
            <div class="menu">
                <ul>
                    <li>手动输入</li>
                    <li>批量导入</li>
                </ul>
                <div class="clear"></div>
            </div>
            <form class="menu_left" action="/adAddBook" method="POST" style="display: none">
                <div class="data">
                    <label>图书编号</label>
                    <input name="BookId" />
                    <!-- <button class="P_btn">打印编码</button> -->
                </div>
                <div class="data">
                    <label>图书名称</label>
                    <input name="BookName" />
                </div>
                <div class="data">
                    <label>作者</label>
                    <input name="Author" />
                </div>
                <div class="data">
                    <label>译者</label>
                    <input name="Translator" />
                </div>
                <div class="data">
                    <label>价格</label>
                    <input name="Price" />
                </div>
                <div class="data">
                    <label>ISBN编码</label>
                    <input name="ISBNCode" />
                </div>
                <div class="data">
                    <label>出版社</label>
                    <input name="PublishCompany">
                </div>
                <div class="data">
                    <label>出版日期</label>
                    <input name="ComeUpTime" />
                </div>
                <div class="data">
                    <label>入库者</label>
                    <input name="EnteringMen" />
                </div>
                <button class="add_btn" type="submit">确认加入</button>
                <!-- <div class="noadd_btn">取消</div> -->
            </form>
            <form class="menu_right" action="/adAddFile" method="post" enctype="multipart/form-data" style="display: block">
                <input type="text" name="textfield" style="height:30px;width:150px;" />
                <input type="file" name="xlsxfile" style="height:30px" />
                <button type="submit" style="height:30px;width:80px;border-radius: 5px;" />上传文件 </button>

            </form>
            <div class="table_div">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="tdOne">图书编号</th>
                            <th>图书名称</th>
                            <th class="tdTwo">作者</th>
                            <th class="tdTwo">译者</th>
                            <th class="tdTwo">价格</th>
                            <th>ISBN编码</th>
                            <th>出版社</th>
                            <th class="tdOne">出版日期</th>

                            <th class="tdTwo">入库者</th>
                            <th class="tdOne">操作</th>
                        </tr>
                    </thead>
                   
                </table>
                <div class="book_num">图书数量:
                    <span>6</span> 本</div>
                <button class="submit">确认导入</button>
            </div>

        </div>
        </div>
        <div class="clear"></div>
        </div>
        </div>

        </body>

        </html>