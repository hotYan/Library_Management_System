<%- include adHeader %>
    <link rel="stylesheet" type="text/css" href="../stylesheets/adCheckBook.css">
    <script type="text/javascript">
        $(document).ready(function () {
            var left_li = $(".left ul li:eq(3)");
            left_li.css("color", "#FFF");
            left_li.css("background-color", "#BBCAF1");
            $(".left ul").find('li:eq(3)').children(".trig").css('display', 'block');
            $(".table tbody tr:odd").css("backgroundColor", "#E3F2F5");
        });
    </script>
    <%- include adLeftBar %>
        <div class="ad_data">
            <form class="search" action="/adCheckBook" method="POST">
                <input type="text" placeholder="输入图书编号" name= "BookId" />
                <button class="btn" type="submit">搜索</button>
            </form>
            <div class="table_div">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="tdOne">图书编号</th>
                            <th>图书名称</th>
                            <th class="tdTwo">作者</th>
                            <th class="tdTwo">译者</th>
                            <th class="tdTwo">价格</th>
                            <th>出版社</th>
                            <th class="tdOne">出版日期</th>
                            <th>ISBN编码</th>
                            <th class="tdTwo">入库者</th>
                            <th class="tdOne">入库时间</th>
                            <th class="tdOne">是否借出</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0;i< datas.length;i++){ %>
                            <tr>
                                <td class="tdOne">
                                    <%= datas[i].BookId %>
                                </td>
                                <td class="tdOne">
                                    <%= datas[i].BookName %>
                                </td>

                                <td>
                                    <%= datas[i].Author %>
                                </td>
                                <td class="tdOne">
                                    <%= datas[i].Translator %>
                                </td>
                                <td class="tdOne">
                                    <%= datas[i].Price %>
                                </td>
                                <td class="tdOne">
                                    <%= datas[i].ISBNCode %>
                                </td>

                                <td>
                                    <%= datas[i].ComeUpTime %>
                                </td>
                                <td class="tdOne">
                                    <%= datas[i].PublishCompany %>
                                </td>
                                <td class="tdOne">
                                    <%= datas[i].State %>
                                </td>
                                <td class="tdOne">
                                    <%= datas[i].EnteringMen %>
                                </td>

                                <td>
                                    <%= datas[i].EnteringDate %>
                                </td>

                            </tr>
                            <% }%>

                    </tbody>
                </table>
            </div>

        </div>
        </div>
        <div class="clear"></div>
        </div>
        </div>
        </body>

        </html>