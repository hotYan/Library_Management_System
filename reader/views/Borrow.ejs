<%- include header %>
  <link rel="stylesheet" type="text/css" href="../stylesheets/readerBorrowing.css">
  <script type="text/javascript">
    $(function () {
      var Lis = $(".menu ul li").eq(2);
      Lis.css('border-bottom', '7px solid #419EDC');
      Lis.css('margin-top', '-7px');
      Lis.css('color', '#419EDC');
      $(".table tbody tr:odd").css("backgroundColor", "#E3F2F5");
    })
  </script>
  <style type="text/css">
    form {
      /* background-color: aqua; */
      margin-left: 30%;
      margin-bottom: 80px;


    }

    form input {
      height: 40px;
      width: 300px;
      border-radius: 5px;


    }

    form button {
      margin-left: 10px;
      padding: 10px 15px;
      border-radius: 5px;
      font-size: 16px;

    }
  </style>
  <%- include TopBar %>
    <div class="content">
      <form action="/Borrow" method="POST">
        <input placeholder=" &nbsp;&nbsp; &nbsp;输入图书编号" type="text" name="BookId" />
        <button type="submit">借 &nbsp;&nbsp;阅</button>
      </form>
      <hr/>
      <div class="book_num">
        <div class="borred">已借:
          <span>
            <%= datas.length %>
          </span>&nbsp;&nbsp;&nbsp;本</div>
        <div class="borred">剩余可借:
          <span>
            <%= 10-(datas.length) %>
          </span>&nbsp;&nbsp;&nbsp;本</div>
      </div>
      <div class="table_div">
        <table class="table">
          <thead>

            <th>图书编号</th>
            <th>图书名</th>
            <th>借书日期</th>
            <th>应还日期</th>
          </thead>
          <tbody>
                <% for(var i=0;i< datas.length;i++){ %>
                  <tr>
                    <td>
                      <%= datas[i].BookId %>
                    </td>
                    <td>
                      <%= datas[i].BookName %>
                    </td>
                    <td>
                      <%= datas[i].BorrowTime %>
                    </td>
                    <td>
                      <%= datas[i].ShouldTime %>
                    </td>
                  </tr>

                  <% }%>

          </tbody>
        </table>
      </div>
    </div>
    <%- include footer %>